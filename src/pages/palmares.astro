---
import Base from "../layouts/Base.astro";
import Navbar from "../components/ui/navbar.astro";
import Footer from "../components/ui/Footer.astro";
---

<Base
  title="Palmarés | Junior de Barranquilla"
  description="Títulos y logros del Junior de Barranquilla."
>
  <Navbar />
  <main class="mx-auto max-w-6xl px-4 py-10">
    <h1 class="text-3xl md:text-4xl font-bold">Palmarés</h1>
    <p class="mt-2 text-neutral-300">
      Títulos y logros del Junior de Barranquilla.
    </p>

    <section class="mt-8 space-y-6">
      <!-- Títulos Nacionales -->
      <div class="rounded-2xl border border-neutral-800 bg-neutral-900/50 p-6">
        <div class="flex items-center gap-3 mb-4">
          <svg
            class="w-6 h-6 text-yellow-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6m0 5a2.5 2.5 0 0 1 0-5m0 5v13a2.5 2.5 0 0 0 5 0V9m0 0a2.5 2.5 0 0 0 0-5m0 5H18m0-5a2.5 2.5 0 0 1 0 5m0-5H19.5a2.5 2.5 0 0 0 0 5H18m0 0v13a2.5 2.5 0 0 1-5 0V9"
            ></path>
          </svg>
          <h2 class="text-2xl font-bold">Títulos Nacionales</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-yellow-400">Liga BetPlay DIMAYOR</h3>
            <p class="text-sm text-neutral-300 mt-1">
              10 títulos (1977, 1980, 1993, 1995, 2004-I, 2010-II, 2011-I,
              2018-II, 2019-I, 2023-I)
            </p>
          </div>

          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-yellow-400">Copa Colombia</h3>
            <p class="text-sm text-neutral-300 mt-1">
              3 títulos (1992, 2015, 2017)
            </p>
          </div>

          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-yellow-400">Superliga Colombiana</h3>
            <p class="text-sm text-neutral-300 mt-1">1 título (2019)</p>
          </div>

          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-yellow-400">Copa Simón Bolívar</h3>
            <p class="text-sm text-neutral-300 mt-1">1 título (1976)</p>
          </div>
        </div>
      </div>

      <!-- Torneos Internacionales -->
      <div class="rounded-2xl border border-neutral-800 bg-neutral-900/50 p-6">
        <div class="flex items-center gap-3 mb-4">
          <svg
            class="w-6 h-6 text-blue-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
            ></path>
          </svg>
          <h2 class="text-2xl font-bold">Participaciones Internacionales</h2>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-blue-400">Copa Libertadores</h3>
            <p class="text-sm text-neutral-300 mt-1">
              Múltiples participaciones
            </p>
          </div>

          <div class="bg-neutral-800 rounded-xl p-4">
            <h3 class="font-semibold text-blue-400">Copa Sudamericana</h3>
            <p class="text-sm text-neutral-300 mt-1">Semifinalista en 2017</p>
          </div>
        </div>
      </div>

      <!-- Estadísticas -->
      <div class="rounded-2xl border border-neutral-800 bg-neutral-900/50 p-6">
        <h2 class="text-2xl font-bold mb-4">Estadísticas Destacadas</h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-neutral-800 rounded-xl">
            <div class="text-3xl font-bold text-red-500">14</div>
            <div class="text-sm text-neutral-400">Títulos Oficiales</div>
          </div>
          <div class="text-center p-4 bg-neutral-800 rounded-xl">
            <div class="text-3xl font-bold text-red-500">100</div>
            <div class="text-sm text-neutral-400">Años de Historia</div>
          </div>
          <div class="text-center p-4 bg-neutral-800 rounded-xl">
            <div class="text-3xl font-bold text-red-500">10</div>
            <div class="text-sm text-neutral-400">Ligas Ganadas</div>
          </div>
          <div class="text-center p-4 bg-neutral-800 rounded-xl">
            <div class="text-3xl font-bold text-red-500">1924</div>
            <div class="text-sm text-neutral-400">Año de Fundación</div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Base>
