---
import Base from "../../layouts/Base.astro";
import Navbar from "../../components/ui/navbar.astro";
import Footer from "../../components/ui/Footer.astro";
---

<Base
  title="Yimmi Chará | Junior de Barranquilla"
  description="Perfil completo de Yimmi Chará, extremo y figura del Junior de Barranquilla."
>
  <Navbar />

  <!-- Hero del Jugador -->
  <section class="relative min-h-screen bg-hero-image overflow-hidden">
    <div class="relative z-10 mx-auto max-w-6xl px-4 pt-24 pb-16">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1
          class="text-5xl md:text-7xl font-black text-white mb-4 tracking-tight"
        >
          YIMMI CHARÁ
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 font-semibold">
          EL MAGO DE CALI
        </p>
        <div class="flex justify-center items-center gap-4 mt-4">
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg font-bold"
            >#8</span
          >
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg"
            >33 años</span
          >
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg"
            >EXTREMO</span
          >
        </div>
      </div>

      <!-- Galería de Imágenes - Espacios vacíos limpios sin líneas -->
      <div class="grid md:grid-cols-2 gap-4 mb-12">
        <div
          class="bg-white/5 rounded-2xl h-96 md:h-[500px] flex items-center justify-center"
        >
          <span class="text-white/30 text-lg font-light">Próximamente</span>
        </div>
        <div
          class="bg-white/5 rounded-2xl h-96 md:h-[500px] flex items-center justify-center"
        >
          <span class="text-white/30 text-lg font-light">Próximamente</span>
        </div>
      </div>

      <!-- Estadísticas 2024 -->
      <div
        class="bg-white/15 backdrop-blur-md rounded-3xl p-8 mb-12 border border-white/20"
      >
        <h2 class="text-3xl font-bold text-white mb-6 text-center">
          REGRESO A CASA 2024
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">4</div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Goles
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">
              43
            </div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Partidos
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">2</div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Asistencias
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">
              88.4
            </div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Min/Partido
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Información Detallada -->
  <main class="bg-white">
    <!-- Trayectoria en MLS -->
    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          DE LA MLS A BARRANQUILLA
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Portland Timbers -->
          <div class="bg-white rounded-2xl p-8 border border-gray-200">
            <h3
              class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                ></path>
              </svg>
              Portland Timbers (2020-2023)
            </h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>MLS is Back Tournament 2020</strong> (Campeón)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Final MLS Cup 2021</strong> (Subcampeón)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>102 partidos</strong> en temporada regular</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>15 goles y 29 asistencias</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium">Jugador Designado</span>
              </li>
            </ul>
          </div>

          <!-- Junior History -->
          <div class="bg-red-50 rounded-2xl p-8 border border-red-200">
            <h3
              class="text-2xl font-bold text-red-700 mb-6 flex items-center gap-3"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                ></path>
              </svg>
              Con Junior
            </h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Primera etapa 2017-2018</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Copa Colombia 2017</strong> (Campeón)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>13 goles en 28 partidos</strong> (2017)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Dupla "Chateo"</strong> con Teófilo Gutiérrez</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Regreso 2024</strong> (Segunda etapa)</span
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Trayectoria Internacional -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          CARRERA INTERNACIONAL
        </h2>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div class="text-4xl font-black text-red-600 mb-2">16</div>
            <div class="text-gray-800 font-semibold">Partidos con Colombia</div>
            <div class="text-sm text-gray-600 mt-1">1 gol, 2 asistencias</div>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div class="text-4xl font-black text-red-600 mb-2">5+</div>
            <div class="text-gray-800 font-semibold">Países diferentes</div>
            <div class="text-sm text-gray-600 mt-1">
              Colombia, México, Brasil, EE.UU.
            </div>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div class="text-4xl font-black text-red-600 mb-2">€5M</div>
            <div class="text-gray-800 font-semibold">Traspaso a Brasil</div>
            <div class="text-sm text-gray-600 mt-1">Atlético Mineiro 2018</div>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div class="text-4xl font-black text-red-600 mb-2">15</div>
            <div class="text-gray-800 font-semibold">Años profesional</div>
            <div class="text-sm text-gray-600 mt-1">Desde 2010</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Clubes -->
    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          RECORRIDO MUNDIAL
        </h2>

        <div
          class="bg-gradient-to-r from-red-50 to-white rounded-2xl p-8 border border-red-200"
        >
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Colombia</h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Deportes Tolima</strong> (2010-2014)</li>
                <li><strong>Atlético Nacional</strong> (2015)</li>
                <li><strong>Junior FC</strong> (2017-2018, 2024-)</li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">
                Internacional
              </h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Monterrey</strong> (México, 2015-2017)</li>
                <li><strong>Dorados</strong> (México, 2016)</li>
                <li><strong>Atlético Mineiro</strong> (Brasil, 2018-2019)</li>
                <li><strong>Portland Timbers</strong> (EE.UU., 2020-2023)</li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Títulos</h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Liga Águila</strong> (Nacional, 2015)</li>
                <li><strong>Copa Colombia</strong> (Tolima, 2014)</li>
                <li><strong>Copa Colombia</strong> (Junior, 2017)</li>
                <li><strong>MLS is Back</strong> (Portland, 2020)</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Características de Juego -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          PERFIL DE JUEGO
        </h2>

        <div class="grid md:grid-cols-3 gap-8">
          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div
              class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-red-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Velocidad</h3>
            <p class="text-gray-600">
              Extremo rápido con gran explosividad en los primeros metros
            </p>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div
              class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-red-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Creatividad</h3>
            <p class="text-gray-600">
              Excelente visión de juego y capacidad para crear ocasiones
            </p>
          </div>

          <div
            class="bg-white rounded-2xl p-6 text-center shadow-lg border border-red-200"
          >
            <div
              class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-8 h-8 text-red-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Experiencia</h3>
            <p class="text-gray-600">
              Veterano con experiencia en las mejores ligas del continente
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Datos Personales -->
    <section class="py-16">
      <div class="mx-auto max-w-4xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          INFORMACIÓN PERSONAL
        </h2>

        <!-- Foto principal del jugador -->
        <div class="flex justify-center mb-8">
          <img
            src="/jugadores/yimi.png"
            alt="Yimmi Chará - Perfil Oficial"
            class="w-48 h-48 md:w-64 md:h-64 object-cover rounded-full border-4 border-red-600 shadow-2xl"
          />
        </div>

        <div
          class="bg-gradient-to-r from-red-50 to-white rounded-2xl p-8 border border-red-200"
        >
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">
                Datos Básicos
              </h3>
              <ul class="space-y-3">
                <li class="text-gray-800">
                  <strong>Nombre completo:</strong> Yimmi Javier Chará Zamora
                </li>
                <li class="text-gray-800">
                  <strong>Fecha de nacimiento:</strong> 2 de abril de 1991
                </li>
                <li class="text-gray-800">
                  <strong>Lugar de nacimiento:</strong> Cali, Valle del Cauca
                </li>
                <li class="text-gray-800"><strong>Altura:</strong> 168 cm</li>
                <li class="text-gray-800"><strong>Peso:</strong> 77 kg</li>
                <li class="text-gray-800">
                  <strong>Pie preferido:</strong> Derecho
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">En Junior</h3>
              <ul class="space-y-3">
                <li class="text-gray-800"><strong>Dorsal:</strong> 8</li>
                <li class="text-gray-800">
                  <strong>Posición:</strong> Extremo derecho/izquierdo
                </li>
                <li class="text-gray-800"><strong>Debut:</strong> 2017</li>
                <li class="text-gray-800">
                  <strong>Hermano:</strong> Diego Chará (Portland Timbers)
                </li>
                <li class="text-gray-800"><strong>Regreso:</strong> 2024</li>
                <li class="text-gray-800">
                  <strong>Contrato:</strong> Hasta 2025
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Frase icónica -->
    <section class="py-16 bg-red-600">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <blockquote class="text-3xl md:text-4xl font-bold text-white mb-4">
          "Siempre he disfrutado jugar al fútbol. Junior me ha dado mucha
          satisfacción"
        </blockquote>
        <cite class="text-xl text-red-100">— Yimmi Chará</cite>
      </div>
    </section>
  </main>

  <Footer />
</Base>

<style>
  .bg-hero-image {
    background-image: url("/background-players2.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
