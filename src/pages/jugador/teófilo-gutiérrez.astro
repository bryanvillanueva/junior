---
import Base from "../../layouts/Base.astro";
import Navbar from "../../components/ui/navbar.astro";
import Footer from "../../components/ui/Footer.astro";
---

<Base
  title="Teófilo Gutiérrez | Junior de Barranquilla"
  description="Perfil completo de Teófilo Gutiérrez, ídolo y leyenda del Junior de Barranquilla."
>
  <Navbar />

  <!-- Hero del Jugador -->
  <section class="relative min-h-screen bg-hero-image overflow-hidden">
    <div class="relative z-10 mx-auto max-w-6xl px-4 pt-24 pb-16">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1
          class="text-5xl md:text-7xl font-black text-white mb-4 tracking-tight"
        >
          TEÓFILO GUTIÉRREZ
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 font-semibold">
          EL PERFUME DE BARRANQUILLA
        </p>
        <div class="flex justify-center items-center gap-4 mt-4">
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg font-bold"
            >#29</span
          >
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg"
            >39 años</span
          >
          <span
            class="bg-white/20 backdrop-blur-sm text-white px-4 py-2 rounded-full text-lg"
            >DELANTERO</span
          >
        </div>
      </div>

      <!-- Galería de Imágenes - Sin contenedores, sueltas y cerca -->
      <div class="grid md:grid-cols-2 gap-4 mb-12">
        <div class="group cursor-pointer">
          <img
            src="/jugadores/teo2.png"
            alt="Teófilo Gutiérrez - Imagen Principal"
            class="w-full object-cover rounded-2xl transition-transform duration-500 group-hover:scale-105"
          />
        </div>
        <div class="group cursor-pointer">
          <img
            src="/jugadores/teo3.png"
            alt="Teófilo Gutiérrez - Celebración"
            class="w-full object-cover rounded-2xl transition-transform duration-500 group-hover:scale-105"
          />
        </div>
      </div>

      <!-- Estadísticas 2025 -->
      <div
        class="bg-white/15 backdrop-blur-md rounded-3xl p-8 mb-12 border border-white/20"
      >
        <h2 class="text-3xl font-bold text-white mb-6 text-center">
          CUARTA ETAPA EN JUNIOR
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">
              94
            </div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Goles Históricos
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">
              209
            </div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Partidos
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">5</div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Títulos
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-white mb-2">4</div>
            <div class="text-white/90 uppercase tracking-wide font-semibold">
              Etapas
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Información Detallada -->
  <main class="bg-white">
    <!-- Palmarés con Junior -->
    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          LEYENDA TIBURONA
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Títulos -->
          <div class="bg-red-50 rounded-2xl p-8 border border-red-200">
            <h3
              class="text-2xl font-bold text-red-700 mb-6 flex items-center gap-3"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                ></path>
              </svg>
              Títulos con Junior
            </h3>
            <ul class="space-y-4">
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Copa Colombia 2017</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Liga BetPlay 2018-II</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Liga BetPlay 2019-I</strong> (Bicampeón)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Superliga 2019</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-red-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Superliga 2020</strong></span
                >
              </li>
            </ul>
          </div>

          <!-- Logros Individuales -->
          <div class="bg-white rounded-2xl p-8 border border-gray-200">
            <h3
              class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"
                ></path>
              </svg>
              Logros Destacados
            </h3>
            <ul class="space-y-4">
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Goleador Liga 2009</strong> (30 goles)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>4° goleador mundial 2009</strong> (IFFHS)</span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Subcampeón Copa Sudamericana 2017</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Ídolo de la hinchada</strong></span
                >
              </li>
              <li class="flex items-center gap-3">
                <span class="w-3 h-3 bg-gray-600 rounded-full"></span>
                <span class="text-gray-800 font-medium"
                  ><strong>Capitán de Colombia</strong> (Olímpicos 2016)</span
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Las 4 Etapas -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          SUS 4 ETAPAS EN JUNIOR
        </h2>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="text-2xl font-black text-red-600 mb-2">2007-2009</div>
            <div class="text-gray-700 font-semibold mb-2">Primera Etapa</div>
            <div class="text-3xl font-bold text-gray-900 mb-1">30 goles</div>
            <div class="text-sm text-gray-500">44 partidos</div>
            <div class="text-xs text-red-600 mt-2 font-semibold">
              Goleador del año
            </div>
          </div>

          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="text-2xl font-black text-red-600 mb-2">2012</div>
            <div class="text-gray-700 font-semibold mb-2">Segunda Etapa</div>
            <div class="text-3xl font-bold text-gray-900 mb-1">5 goles</div>
            <div class="text-sm text-gray-500">12 partidos</div>
            <div class="text-xs text-gray-600 mt-2">Paso breve</div>
          </div>

          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="text-2xl font-black text-red-600 mb-2">2017-2021</div>
            <div class="text-gray-700 font-semibold mb-2">Tercera Etapa</div>
            <div class="text-3xl font-bold text-gray-900 mb-1">59 goles</div>
            <div class="text-sm text-gray-500">119 partidos</div>
            <div class="text-xs text-red-600 mt-2 font-semibold">
              Era dorada
            </div>
          </div>

          <div
            class="bg-white rounded-2xl p-6 shadow-lg border-2 border-red-600"
          >
            <div class="text-2xl font-black text-red-600 mb-2">2025</div>
            <div class="text-gray-700 font-semibold mb-2">Cuarta Etapa</div>
            <div class="text-3xl font-bold text-gray-900 mb-1">En curso</div>
            <div class="text-sm text-gray-500">El retiro</div>
            <div class="text-xs text-red-600 mt-2 font-semibold">
              Última danza
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Trayectoria Internacional -->
    <section class="py-16">
      <div class="mx-auto max-w-6xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          TRAYECTORIA MUNDIAL
        </h2>

        <div
          class="bg-gradient-to-r from-red-50 to-white rounded-2xl p-8 border border-red-200"
        >
          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Europa</h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Trabzonspor</strong> (Turquía)</li>
                <li><strong>Sporting Lisboa</strong> (Portugal)</li>
                <li><strong>Cruz Azul</strong> (México)</li>
                <li><strong>River Plate</strong> (Argentina)</li>
                <li><strong>Rosario Central</strong> (Argentina)</li>
              </ul>
            </div>
            <div class="text-center">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Colombia</h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Junior</strong> (4 etapas)</li>
                <li><strong>Deportivo Cali</strong></li>
                <li><strong>Atlético Bucaramanga</strong></li>
                <li><strong>Real Cartagena</strong></li>
              </ul>
            </div>
            <div class="text-center">
              <h3 class="text-xl font-bold text-gray-900 mb-4">Selección</h3>
              <ul class="space-y-2 text-gray-700">
                <li><strong>Copa América 2015</strong></li>
                <li><strong>Copa América 2016</strong></li>
                <li><strong>Olímpicos 2016</strong> (Capitán)</li>
                <li><strong>38 partidos</strong></li>
                <li><strong>9 goles</strong></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Datos Personales -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-4xl px-4">
        <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">
          EL PERFUME
        </h2>

        <!-- Foto principal del jugador -->
        <div class="flex justify-center mb-8">
          <img
            src="/jugadores/teo.png"
            alt="Teófilo Gutiérrez - Perfil Oficial"
            class="w-48 h-48 md:w-64 md:h-64 object-cover rounded-full border-4 border-red-600 shadow-2xl"
          />
        </div>

        <div
          class="bg-gradient-to-r from-red-50 to-white rounded-2xl p-8 border border-red-200"
        >
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">
                Información Personal
              </h3>
              <ul class="space-y-3">
                <li class="text-gray-800">
                  <strong>Nombre completo:</strong> Teófilo Antonio Gutiérrez Roncancio
                </li>
                <li class="text-gray-800">
                  <strong>Fecha de nacimiento:</strong> 17 de mayo de 1985
                </li>
                <li class="text-gray-800">
                  <strong>Lugar de nacimiento:</strong> Barrio La Chinita, Barranquilla
                </li>
                <li class="text-gray-800"><strong>Altura:</strong> 178 cm</li>
                <li class="text-gray-800"><strong>Peso:</strong> 76 kg</li>
                <li class="text-gray-800">
                  <strong>Apodo:</strong> "Teo", "El Perfume"
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">En Junior</h3>
              <ul class="space-y-3">
                <li class="text-gray-800">
                  <strong>Debut:</strong> 2007 (20 años)
                </li>
                <li class="text-gray-800">
                  <strong>Dorsal actual:</strong> 29
                </li>
                <li class="text-gray-800">
                  <strong>Posición:</strong> Delantero / Mediapunta
                </li>
                <li class="text-gray-800">
                  <strong>Total partidos:</strong> 209
                </li>
                <li class="text-gray-800"><strong>Total goles:</strong> 94</li>
                <li class="text-gray-800"><strong>Total títulos:</strong> 5</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Frase icónica -->
    <section class="py-16 bg-red-600">
      <div class="mx-auto max-w-4xl px-4 text-center">
        <blockquote class="text-3xl md:text-4xl font-bold text-white mb-4">
          "Junior es como el carnaval a Barranquilla, es el ídolo querido de la
          ciudad"
        </blockquote>
        <cite class="text-xl text-red-100">— Teófilo Gutiérrez</cite>
      </div>
    </section>
  </main>

  <Footer />
</Base>

<style>
  .bg-hero-image {
    background-image: url("/background-players2.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
