---
import Base from "../layouts/Base.astro";
import Navbar from "../components/ui/navbar.astro"; // 👈 cuidado con la mayúscula
import Footer from "../components/ui/Footer.astro";
import PlayerCard from "../components/players/PlayerCard";
import data from "../content/jugadores/plantel.json";
---

<Base
  title="Junior de Barranquilla | Sitio no oficial"
  description="Historia, plantel y estadísticas del Junior de Barranquilla."
>
  <!-- Nav transparente sobre el hero; texto blanco -->
  <Navbar textClass="text-black bg-red-500" />

  <main class="mx-auto max-w-6xl px-4 pt-24 md:pt-28">
    <!-- HERO -->
    <section class="mb-10 grid gap-6 md:grid-cols-2 items-center">
      <div>
        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">
          Junior de Barranquilla
        </h1>
        <p class="mt-4 text-lg text-neutral-300">
          Club Deportivo Popular Junior Fútbol Club S. A. — fundado en 1924.
          Local en el Estadio Metropolitano Roberto Meléndez.
        </p>
        <p class="mt-2 text-sm opacity-70">“¡Junior, tu papá!”</p>
      </div>
      <!-- bloque visual sin imagen para evitar 404 -->
      <div
        class="rounded-2xl h-56 md:h-72 border border-neutral-800 bg-gradient-to-br from-red-700/50 via-neutral-800 to-neutral-900"
      >
      </div>
    </section>

    <!-- PLANTEL (muestra) -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-4">Plantel (muestra)</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {data.slice(0, 6).map((p) => <PlayerCard client:visible {...p} />)}
      </div>
    </section>
  </main>

  <Footer />
</Base>
