---
import "../styles/global.css"; // 👈 aquí cargas Tailwind
interface Props {
  title?: string;
  description?: string;
}
const {
  title = "Junior de Barranquilla",
  description = "Sitio de muestra con Astro",
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <!-- evita los caracteres raros -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <style is:global>
      /* Fuente del sistema para que se vea bien desde ya */
      body {
        font-family:
          ui-sans-serif,
          system-ui,
          -apple-system,
          Segoe UI,
          Roboto,
          Inter,
          Arial,
          "Noto Sans",
          "Helvetica Neue",
          "Apple Color Emoji",
          "Segoe UI Emoji";
      }
    </style>
    <!-- ❌ ELIMINA ESTA LÍNEA - está duplicando la importación -->
    <!-- <link rel="stylesheet" href="/_astro/global.css" /> -->
  </head>
  <body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased">
    <slot />
  </body>
</html>
